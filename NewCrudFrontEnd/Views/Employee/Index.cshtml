@model List<Employee>
@{
    ViewBag.Title = "Employee List";
}

<h2>Employee List</h2>
<a href="/Employee/Create" class="btn btn-primary">Add New</a>
<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.id</td>
                <td>@emp.ename</td>
                <td>@emp.email</td>
                <td>@emp.age</td>
                <td>@emp.salary</td>
                <td>
                    <a href="/Employee/Edit/@emp.id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@emp.id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
